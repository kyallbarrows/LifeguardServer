@model Parichay.MVC.Models.GroupDetailsModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="@Url.Content("~/Content/styles/jquery.ui.css")" rel="stylesheet" type="text/css" />

}
<script src="@Url.Content("~/Content/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>

<fieldset>
<legend><h2>Group Messages</h2></legend>
@if((Model.groupDetails!=null))
{
    <h3>&gt;@Model.groupDetails.Name</h3>
    <p>(@Model.groupDetails.About)</p>
}
@Html.Partial("grpMsgs",Model.groupMessages)
<br /><br />
    @Html.Partial("Post", new Parichay.Data.Entity.MemberGroupmessages() { Group = new Parichay.Data.Entity.MemberGroups() { Id = Int32.Parse(ViewContext.Controller.ValueProvider.GetValue("id").RawValue.ToString()) } })
</fieldset>

   <p> @Html.ActionLink("Back to Groups", "Index") </p>


       